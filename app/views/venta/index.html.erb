<p id="notice"><%= notice %></p>

<h1>Ventas</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Cliente</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venta.each do |ventum| %>
      <tr>
        <td><%= ventum.codigo %></td>
        <td><%= ventum.cliente %></td>
        <td><%= ventum.monto %></td>
        <td><%= link_to 'Detalles', ventum %></td>
        <td><%= link_to 'Editar', edit_ventum_path(ventum) %></td>
        <td><%= link_to 'Borrar', ventum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Venta', new_ventum_path %>
